<%- include("partials/header"); %>


<div style="width: 60%; margin: 0 auto;">
    <h1 style="text-align: center;"><%= blog.title %></h1></a>
    <ul style="display: flex; justify-content: space-between; gap: 5rem">
        <li><%= blog.reading_time %></li>
        <li><%= blog.read_count %></li>
        <li><%= blog.author %></li>
        <li>
            <% blog.tags.forEach((tag) => { %>
                <ul style="display: flex; justify-content: space-between; gap: 2rem">
                    <li>tag</li>
                </ul>
            <% }) %>
        </li>
    </ul>
    <% if (blog.description) { %>
        <p><%= blog.description %></p>
    <% } %>
    <p>
        <%= blog.body %> 
    </p>

    <% if (user._id === blog.author) { %>
        <a href="/blogs/<%= blog._id %>/edit">Edit</a>
        <form action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
            <input type="submit" value="Delete">
        </form>
    <% } %>
    
</div>


<%- include("partials/footer"); %>