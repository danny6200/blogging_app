<%- include("partials/header"); %>

<% if (message) { %>
    <p>
        <%= message %>
    </p>
<% } %>

<h1>Edit <%= blog.title %></h1>

<form action="/blogs/<%= blog._id %>?_method=PATCH" method="POST">
    <div>
        <label for="title">Title:</label>
        <input type="text" name="title" id="" value="<%= blog.title %>" required>
    </div>

    <div>
        <label for="description">Description:</label>
        <input type="text" name="description" id="" value="<%= blog.description %>">
    </div>

    <div>
        <label for="body">Body:</label>
        <input type="text" name="body" id="" value="<%= blog.body %>" required>
    </div>

    <div>
        <label for="tags">Tags:</label>
        <input type="text" name="tags" id="" value="<%= blog.tags %>" required>
    </div>

    <input type="submit" value="Submit">
</form>

<a href="/blogs">Go Home</a>
<a href="/auth/log_out">Log Out</a>

<%- include("partials/footer"); %>